---
interface Props {
    picture1: string;
    picture2: string;
    picture3: string;
    picture4: string;
    picture5: string;
    picture6: string;
    picture7: string;
    picture8: string;

    idtarget: string;
}

const { picture1, picture2, picture3, picture4, picture5, picture6, picture7, picture8, idtarget } = Astro.props;

---

<div class="row me-5 ms-5 mt-5">
    <div class="col-12">
        <div id={idtarget} class="carousel slide mb-lg-4" data-bs-ride="carousel">
            <div class="carousel-indicators rounded">
                <div class="carousel-indicators-container">
                    <button type="button" data-bs-target={`#${idtarget}`} data-bs-slide-to="0"class="active rounded-circle" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target={`#${idtarget}`} data-bs-slide-to="1"class="rounded-circle" aria-label="Slide 2" data-bs-slide="1"></button>
                </div>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row">
                        <div class="col-3">
                            <img src={picture1} class="d-block w-100" alt="slide1">
                        </div>
                        <div class="col-3">
                            <img src={picture2} class="d-block w-100" alt="slide2">
                        </div>
                        <div class="col-3">
                            <img src={picture3} class="d-block w-100" alt="slide3">
                        </div>
                        <div class="col-3">
                            <img src={picture4} class="d-block w-100" alt="slide4">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-3">
                            <img src={picture5} class="d-block w-100" alt="slide5">
                        </div>
                        <div class="col-3">
                            <img src={picture6} class="d-block w-100" alt="slide6">
                        </div>
                        <div class="col-3">
                            <img src={picture7} class="d-block w-100" alt="slide7">
                        </div>
                        <div class="col-3">
                            <img src={picture8} class="d-block w-100" alt="slide8">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="border border-dark border-1 opacity-100 mt-lg-5">
</div>

<style>
	.carousel-indicators.rounded .rounded-circle {
		width: 15px;
		height: 15px;
		background-color: #373A3C;
	}
	.carousel-indicators-container {
		position: absolute;
		justify-content: center;
		margin-top: 2rem;
	}
</style>